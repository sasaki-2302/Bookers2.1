<h2>New book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <label for="inputImage">Images</label>
    <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
  </div>
  <div class="form-group">
    <label for="inputTitle">Name</label>
    <%= f.text_field :title, id: "inputtitle", class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="inputBody">Opinion</label>
    <%= f.text_field :body, id: "inputbody", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>