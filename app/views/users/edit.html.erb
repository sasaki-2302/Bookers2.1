<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-5 col-sm-12 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @user %>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputProfileImage">Images</label>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introducution</label>
          <%= f.text_field :introduction, id: "inputIntroduction", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>