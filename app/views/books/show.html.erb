<%= render 'layouts/user_info', obj: @books.user %>
<h2>Book detail</h2>
<table>
  <thead>
    <td>
      <%= link_to user_path(@books.user.id) do %>
      <%= image_tag @books.get_image %><br>
      <%= @books.user.name %>
      <% end %>
    </td>
    <td><%= link_to @books.title, book_path(@books.id) %></td>
    <td><%= @books.body %></td>
    <% if @books.user == current_user %>
      <td></td>
      <td><%= link_to "Destroy", book_path(@books.id), method: :delete %></td>
    <% end %>
  </thead>
</table>