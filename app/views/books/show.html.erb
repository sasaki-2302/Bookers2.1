<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row">
    <%= render 'layouts/user_info', obj: @books.user %>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <thead>
        <td>
          <%= link_to user_path(@books.user.id) do %>
            <%= image_tag @books.get_image(100,100) %><br>
            <%= @books.user.name %>
          <% end %>
        </td>
        <td><%= link_to @books.title, book_path(@books.id) %></td>
        <td><%= @books.body %></td>
        <% if @books.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@books), class: 'btn btn-sm btn-success' %></td>
          <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger' %></td>
        <% end %>
      </thead>
    </table>
    </div>
  </div>
</div>