<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-5 col-sm-12 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @book %>
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inpuTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label>
          <%= f.text_field :body, id: "inputBody", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <%=link_to "Show", book_path(@book) %> |
      <%=link_to "Back", books_path %>
    </div>
  </div>
</div>