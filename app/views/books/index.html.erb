<div><%= flash[:notice] %></div>
<div class="container">
  <%= render 'layouts/errors', obj: @book %>
  <div class="row">
    <%= render 'layouts/user_info', obj: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Fav</th>
        </thead>
        <% @books.each do |books| %>
        <tbody>
          <td>
            <%= link_to user_path(books.user.id) do %>
              <%= image_tag books.get_image(100,100) %>
            <% end %>
          </td>
          <td><%= link_to books.title, book_path(books.id) %></td>
          <td><%= books.body %></td>
          <td>
            <% if books.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(books), method: :delete do %>
                  ♥<%= books.favorites.count %>
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to book_favorites_path(books), method: :post do %>
                  ♡<%= books.favorites.count %>
                <% end %>
              </p>
            <% end %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>